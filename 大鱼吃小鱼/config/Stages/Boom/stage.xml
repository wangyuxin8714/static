<stage name="Boom" 
	friendlyName="Boom!"
	stageWidth="800" 
	stageHeight="600"
	time="1:00" >

	<environment bgLayout="resources/backdrops/PotteryCave/bgLayout.xml" 
				 fgLayout="resources/backdrops/PotteryCave/fgLayout.xml"
				 mgLayout="resources/backdrops/PotteryCave/mgLayout.xml" />

	<toolTip file="config/toolTips/mineTip.xml" type="levelStart" delay="0.3" />
	
	<playerFish config="config/Fish/LionPlayer.xml" >
		<size size="5.5" targetScore="0" scale="0.4" />
		<size size="7.5" targetScore="350" scale="0.65" />
		<size size="8.5" targetScore="900" scale="1.0" />
		<size size="9.5" targetScore="1600" scale="1.0" />
	</playerFish>

<!-- Fish -->
	
	<enemyFish name="AngelASmallSchool" template="config/fish/angelASmallSchool.xml" poolSize="8" displayMenuImage="true" >
		<spawnInfo playerSize="0"	maxCount="6"	respawnFreq="(0.3,0.8)" />
		<spawnInfo playerSize="7.5" maxCount="8"	respawnFreq="(1.0,2.5)" />
		<spawnInfo playerSize="8.5" maxCount="6"	respawnFreq="(1.0,2.5)" />
	</enemyFish>

	
	<enemyFish name="AngelBSmallSchool" template="config/fish/angelBSmallSchool.xml" poolSize="6" displayMenuImage="false" >
		<spawnInfo playerSize="0"	maxCount="6"	respawnFreq="(0.2,1.2)" />
		<spawnInfo playerSize="7.5" maxCount="0"	respawnFreq="(1.0,2.5)" />
		<spawnInfo playerSize="8.5" maxCount="0"	respawnFreq="(1.0,2.5)" />
	</enemyFish>

	<enemyFish name="Angler Large" template="config/fish/AnglerLarge.xml" poolSize="2" >
		<spawnInfo playerSize="0"	maxCount="0"	respawnFreq="(3.0,8.0)" />
		<spawnInfo playerSize="7.5" maxCount="1"	respawnFreq="(0.8,2.0)" />
		<spawnInfo playerSize="8.5" maxCount="2"	respawnFreq="(1.0,4.0)" />
	</enemyFish> 

	<enemyFish name="Surgeon B Medium Flyby" template="config/fish/SurgeonBMediumFlyby.xml" poolSize="4" >
		<spawnInfo playerSize="0"	maxCount="2"	respawnFreq="(1.0,3.0)" />
		<spawnInfo playerSize="7.5" maxCount="5"	respawnFreq="(1.0,2.0)" />
		<spawnInfo playerSize="8.5" maxCount="4"	respawnFreq="(2.0,5.0)" />
	</enemyFish>

<!-- Hazards -->

	<enemyFish name="Mine" template="config/fish/Mine.xml" poolSize="4" displayMenuImage="false" mode="uncounted" >
		<spawnInfo playerSize="0"	maxCount="3"	respawnFreq="(2, 3.0)" />
		<spawnInfo playerSize="7.5" maxCount="2"	respawnFreq="(1, 3.0)" />
		<spawnInfo playerSize="8.5" maxCount="2"	respawnFreq="(1, 4.0)" />
		<spawnInfo playerSize="9.5" maxCount="0"	respawnFreq="0.1" />
	</enemyFish>

<!-- Powerups -->

	<enemyFish name="Bubbles" template="config/fish/BonusBubbleStar.xml" poolSize="2"  displayMenuImage="false" mode="uncounted" >
		<spawnInfo playerSize="0"	maxCount="2"	respawnFreq="(4.0,10.0)" />
	</enemyFish>


	<enemyFish name="Bubbles" template="config/fish/BonusBubbleStun.xml" poolSize="1"  displayMenuImage="false" mode="uncounted" >
		<spawnInfo playerSize="0"	maxCount="1"	respawnFreq="(6.0,20.0)" />
	</enemyFish>

	<enemyFish name="GoldenMinnow" template="config/fish/GoldenMinnow.xml" poolSize="1" displayMenuImage="false" mode="onlyUneaten" >
		<spawnInfo playerSize="0"	maxCount="1"	respawnFreq="(15,40)" />
		<spawnInfo playerSize="7.5"	maxCount="0"	respawnFreq="(15,40)" />
	</enemyFish>

	<music	introSound="stageIntro"
			outroSound="stageOutro"
			gameMusic="resources/music/track4.wav" />
		
</stage>
