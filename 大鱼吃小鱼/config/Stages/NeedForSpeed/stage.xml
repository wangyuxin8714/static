<stage name="NeedForSpeed" 
	friendlyName="Need For Speed"
	stageWidth="800" 
	stageHeight="600"
	time="1:00" >

	<environment bgLayout="resources/backdrops/PotteryCave/bgLayout.xml" 
				 fgLayout="resources/backdrops/PotteryCave/fgLayout.xml"
				 mgLayout="resources/backdrops/PotteryCave/mgLayout.xml" />

	<toolTip file="config/toolTips/barracudaTip.xml" type="danger" delay="0.3" />
	
	<playerFish config="config/Fish/LionPlayer.xml" >
		<size size="5.5" targetScore="0" scale="0.4" />
		<size size="7.5" targetScore="350" scale="0.65" />
		<size size="8.5" targetScore="950" scale="1.05" />
		<size size="9.5" targetScore="1600" scale="1.05" />
	</playerFish>

<!-- Fish -->

	<enemyFish name="AngelASmallSchool" template="config/fish/angelASmallSchool.xml" poolSize="16">
		<spawnInfo playerSize="0"	maxCount="6"	respawnFreq="(.5,.8)" />
		<spawnInfo playerSize="7.5" maxCount="8"	respawnFreq="(1.0,2.5)" />
		<spawnInfo playerSize="8.5" maxCount="8"	respawnFreq="(1.0,2.5)" />
	</enemyFish>

	<enemyFish name="Angler Large" template="config/fish/AnglerLarge.xml" poolSize="2" >
		<spawnInfo playerSize="0"	maxCount="1"	respawnFreq="(6.0,11.0)" />
		<spawnInfo playerSize="7.5" maxCount="2"	respawnFreq="(3.0,5.0)" />
		<spawnInfo playerSize="8.5" maxCount="2"	respawnFreq="(1.0,4.0)" />
	</enemyFish> 

	<enemyFish name="Surgeon B Medium" template="config/fish/SurgeonBMedium.xml" poolSize="3" >
		<spawnInfo playerSize="0"	maxCount="2"	respawnFreq="(2.0,4.0)" />
		<spawnInfo playerSize="7.5" maxCount="2"	respawnFreq="(1.0,2.5)" />
		<spawnInfo playerSize="8.5" maxCount="2"	respawnFreq="(2.0,5.0)" />
	</enemyFish>

	<enemyFish name="Barracuda" template="config/fish/Barracuda.xml" poolSize="1" displayMenuImage="false" mode="uncounted" >
		<spawnInfo playerSize="7.5"	maxCount="1"	respawnFreq="(10.0,20.0)" />
	</enemyFish>

<!-- Hazards -->

	<enemyFish name="Oysters" template="config/fish/oyster.xml" poolSize="2" displayMenuImage="false" mode="uncounted" >
		<staticSpawn pos="667,511" doRespawn="true" />
		<spawnInfo playerSize="0"	maxCount="0"	respawnFreq="(.5,1.5)" />		
	</enemyFish>

<!-- Powerups -->

	<enemyFish name="Speed Bubbles" template="config/fish/BonusBubbleSpeed.xml" poolSize="2"  displayMenuImage="false" mode="uncounted">
		<spawnInfo playerSize="0"	maxCount="2"	respawnFreq="(1.0,5.0)" />
		<spawnInfo playerSize="7.5" maxCount="1"	respawnFreq="(1.0,5.0)" />
		<spawnInfo playerSize="8.5" maxCount="2"	respawnFreq="(3.0,5.0)" />
	</enemyFish>

	<enemyFish name="Bubbles" template="config/fish/BonusBubbleStar.xml" poolSize="2"  displayMenuImage="false" mode="uncounted" >
		<spawnInfo playerSize="0"	maxCount="2"	respawnFreq="(4.0,10.0)" />
	</enemyFish>
	
	<enemyFish name="GoldenMinnow" template="config/fish/GoldenMinnow.xml" poolSize="1" displayMenuImage="false" mode="onlyUneaten" >
		<spawnInfo playerSize="0"	maxCount="1"	respawnFreq="(15,30)" />
	</enemyFish>
	

	<music	introSound="stageIntro"
			outroSound="stageOutro"
			gameMusic="resources/music/track3.wav" />
		
</stage>
