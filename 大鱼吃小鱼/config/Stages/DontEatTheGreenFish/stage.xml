	</enemyFish>

	<enemyFish name="AngelBSmallSchool" template="config/fish/angelBSmallSchool.xml" poolSize="6" displayMenuImage="false" >
		<spawnInfo playerSize="0"	maxCount="6"	respawnFreq="(.2,.5)" />
		<spawnInfo playerSize="7.5" maxCount="6"	respawnFreq="(1.0,2.5)" />
		<spawnInfo playerSize="8.5" maxCount="6"	respawnFreq="(1.0,2.5)" />
	</enemyFish>
	
	<enemyFish name="Parrot A Large" template="config/fish/ParrotALarge.xml" poolSize="3" >
