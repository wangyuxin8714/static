				animPath="resources/shark/"
				class="JohnDoryPlayer" 
				hotSpot="-10,-12,10,12"
				>
		<size size="0.5" targetScore="0" scale="0.5" />
		<size size="1.5" targetScore="200" scale="0.75" />
		<size size="2.5" targetScore="400" scale="1.0" />
		<size size="3.5" targetScore="600" scale="1.0" />
	</playerFish>

	
	<enemyFish name="Mini Minnows" template="config/fish/minnowMiniSchool.xml" poolSize="25">
		<spawnInfo playerSize="0"	maxCount="10"	respawnFreq="(1.0,5.0)" />
		<spawnInfo playerSize="2.5" maxCount="10"	respawnFreq="(1.0,5.0)" />
		<spawnInfo playerSize="3.4" maxCount="10"	respawnFreq="(1.0,5.0)" />
		<spawnInfo playerSize="4.5" maxCount="10"	respawnFreq="(1.0,5.0)" />
	</enemyFish>
	
	<enemyFish name="Mini Surgeon" template="config/fish/tunaMiniSchool.xml" poolSize="6">
		<spawnInfo playerSize="0"	maxCount="6"	respawnFreq="(3.0,6.0)" />
		<spawnInfo playerSize="2.5" maxCount="6"	respawnFreq="(3.0,6.0)" />
		<spawnInfo playerSize="3.4" maxCount="6"	respawnFreq="(3.0,6.0)" />
		<spawnInfo playerSize="4.5" maxCount="6"	respawnFreq="(3.0,6.0)" />
	</enemyFish>
	
	<enemyFish name="Parrot" template="config/fish/ChaserParrot.xml" poolSize="5" >
		<spawnInfo playerSize="0"	maxCount="1"	respawnFreq="(2.0,5.0)" />
		<spawnInfo playerSize="1.5" maxCount="2"	respawnFreq="(1.0,4.0)" />
		<spawnInfo playerSize="2.4" maxCount="3"	respawnFreq="(1.0,4.0)" />
	</enemyFish>

	<music	introSound="stageIntro"
			outroSound="stageOutro"
			gameMusic="resources/music/menuMusic.wav" />
		
