<stage name="TrickyTreasure" 
	friendlyName="Tricky Treasure"
	stageWidth="800" 
	stageHeight="600"
	time="1:30" >

	<environment bgLayout="resources/backdrops/DeepSea/bgLayout.xml" 
				 fgLayout="resources/backdrops/DeepSea/fgLayout.xml"
				 mgLayout="resources/backdrops/DeepSea/mgLayout.xml" />

	<toolTip file="config/toolTips/barracudaTip.xml" type="danger" delay="0.3" />
	
	<playerFish config="config/Fish/AnglerPlayer.xml" >
		<size size="6.5" targetScore="0" scale="0.4" />
		<size size="8.5" targetScore="800" scale="0.65" />
		<size size="12.5" targetScore="1800" scale="1.0" />
		<size size="13.5" targetScore="2800" scale="1.0" />
	</playerFish>

<!-- Fish -->
	
	<enemyFish name="SurgeonBSmallSchool" template="config/fish/surgeonBSmallSchool.xml" poolSize="10">
		<spawnInfo playerSize="0"	maxCount="10"	respawnFreq="(.5,1.5)" />
		<spawnInfo playerSize="8.5" maxCount="6"	respawnFreq="(1.0,2.5)" />
		<spawnInfo playerSize="12.5" maxCount="4"	respawnFreq="(1.0,2.5)" />
	</enemyFish>

	<enemyFish name="SurgeonBSmall" template="config/fish/surgeonBSmall.xml" displayMenuImage="false" poolSize="4">
		<spawnInfo playerSize="0"	maxCount="6"	respawnFreq="(.5,1.5)" />
		<spawnInfo playerSize="8.5" maxCount="4"	respawnFreq="(1.0,2.5)" />
		<spawnInfo playerSize="12.5" maxCount="2"	respawnFreq="(1.0,2.5)" />
	</enemyFish>

	<enemyFish name="SurgeonB2MediumFlyby" template="config/fish/SurgeonB2MediumFlyby.xml" poolSize="5" >
		<spawnInfo playerSize="0"	maxCount="2"	respawnFreq="(2.0,5.0)" />
		<spawnInfo playerSize="8.5" maxCount="4"	respawnFreq="(2.0,5.0)" />
		<spawnInfo playerSize="12.5" maxCount="4"	respawnFreq="(2.0,5.0)" />
	</enemyFish>

	<enemyFish name="SurgeonCLarge" template="config/fish/SurgeonCLarge.xml" poolSize="2" >
		<spawnInfo playerSize="0"	maxCount="1"	respawnFreq="(3.5,8.0)" />
		<spawnInfo playerSize="8.5" maxCount="2"	respawnFreq="(6.0,10.5)" />
		<spawnInfo playerSize="12.5" maxCount="2"	respawnFreq="(2.0,5.0)" />
	</enemyFish> 

	<enemyFish name="Barracuda" template="config/fish/Barracuda.xml" poolSize="1" displayMenuImage="false" mode="uncounted" >
		<spawnInfo playerSize="0"	maxCount="1"	respawnFreq="(15.0,30.0)" />
		<spawnInfo playerSize="12.5"	maxCount="1"	respawnFreq="(5.0, 12.0)" />
	</enemyFish>

<!-- Hazards -->

	<enemyFish name="Oysters Fast" template="config/fish/oysterFast.xml" poolSize="2" displayMenuImage="false" mode="uncounted" >
		<staticSpawn pos="490,540" doRespawn="true" />
		<staticSpawn pos="100,525" doRespawn="true" />
		<spawnInfo playerSize="0"	maxCount="0"	respawnFreq="(.5,1.5)" />		
	</enemyFish>

	<enemyFish name="Poison Minnow" template="config/fish/PoisonMinnow.xml" poolSize="1" displayMenuImage="false" mode="uncounted">
		<spawnInfo playerSize="0"	maxCount="0"	respawnFreq="(0.5,4.0)" />
		<spawnInfo playerSize="8.5" maxCount="1"	respawnFreq="(3.0,10.0)" />
		<spawnInfo playerSize="12.5" maxCount="1"	respawnFreq="(3.0,7.0)" />
	</enemyFish>

<!-- Powerups -->
	
	<enemyFish name="Bubbles" template="config/fish/BonusBubbleStar.xml" poolSize="2"  displayMenuImage="false" mode="uncounted" >
		<spawnInfo playerSize="0"	maxCount="1"	respawnFreq="(3.0,8.0)" />
		<spawnInfo playerSize="8.5" maxCount="1"	respawnFreq="(3.0,8.0)" />
		<spawnInfo playerSize="12.5" maxCount="1"	respawnFreq="(3.0,8.0)" />
	</enemyFish>

	<enemyFish name="Furn Bubbles" template="config/fish/BonusBubbleFeedingFury.xml" poolSize="1"  displayMenuImage="false" mode="uncounted" >
		<spawnInfo playerSize="0"	maxCount="1"	respawnFreq="18" />
		<spawnInfo playerSize="8.5" maxCount="1"	respawnFreq="22" />
		<spawnInfo playerSize="12.5" maxCount="0"	respawnFreq="(6,12)" />
	</enemyFish>

	<enemyFish name="Stun Bubbles" template="config/fish/BonusBubbleStun.xml" poolSize="1"  displayMenuImage="false" mode="uncounted" >
		<spawnInfo playerSize="0"	maxCount="1"	respawnFreq="(7.0,12.0)" />
		<spawnInfo playerSize="8.5" maxCount="1"	respawnFreq="15.0" />
		<spawnInfo playerSize="12.5" maxCount="1"	respawnFreq="15.0" />
	</enemyFish>

	<enemyFish name="2x" template="config/fish/BonusBubble2x.xml" poolSize="1" displayMenuImage="false" mode="uncounted" >
		<spawnInfo playerSize="0"	maxCount="1"	respawnFreq="(10.0,15.0)" />
		<spawnInfo playerSize="8.5" maxCount="1"	respawnFreq="(8.0,12.0)" />
		<spawnInfo playerSize="12.5" maxCount="1"	respawnFreq="(8,12)" />
	</enemyFish>

	<enemyFish name="GoldenMinnow" template="config/fish/GoldenMinnow.xml" poolSize="1" displayMenuImage="false" mode="onlyUneaten" >
		<spawnInfo playerSize="0"	maxCount="1"	respawnFreq="(15,40)" />
	</enemyFish>

	<music	introSound="stageIntro"
			outroSound="stageOutro"
			gameMusic="resources/music/track4.wav" />
		
</stage>
