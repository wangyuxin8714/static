<stage name="SixDegrees" 
	friendlyName="SixDegrees"
	stageWidth="800" 
	stageHeight="600"
	time="1:30" >

	<environment bgLayout="resources/backdrops/DeepSea/bgLayout.xml" 
				 fgLayout="resources/backdrops/DeepSea/fgLayout.xml"
				 mgLayout="resources/backdrops/DeepSea/mgLayout.xml" />
				 
	<playerFish config="config/Fish/AnglerPlayer.xml" >
		<size size="6.5" targetScore="0" scale="0.4" />
		<size size="8.5" targetScore="700" scale=".65" />
		<size size="12.5" targetScore="1650" scale="1.00" />
		<size size="13.5" targetScore="2400" scale="1.00" />
	</playerFish>

<!-- Fish -->
	
	<enemyFish name="LionASmall" template="config/fish/LionASmall.xml" poolSize="12">
		<spawnInfo playerSize="0"	maxCount="12"	respawnFreq="(0.3,0.5)" />
		<spawnInfo playerSize="8.5" maxCount="8"	respawnFreq="(0.3,0.5)" />
		<spawnInfo playerSize="12.5" maxCount="6"	respawnFreq="(0.3,0.5)" />
	</enemyFish>
	
	<enemyFish name="Parrot Fish A Medium" template="config/fish/ParrotAMedium.xml" poolSize="5" >
		<spawnInfo playerSize="0"	maxCount="1"	respawnFreq="(2.0,4.0)" />
		<spawnInfo playerSize="8.5" maxCount="3"	respawnFreq="(2.0,3.0)" />
		<spawnInfo playerSize="12.5" maxCount="3"	respawnFreq="(2.0,5.0)" />
	</enemyFish>

	<enemyFish name="JohnDoryLarge" template="config/fish/JohnDoryLarge.xml" poolSize="2" >
		<spawnInfo playerSize="0"	maxCount="1"	respawnFreq="(2.0,4.0)" />
		<spawnInfo playerSize="8.5" maxCount="2"	respawnFreq="(5.0,10.0)" />
		<spawnInfo playerSize="12.5" maxCount="2"	respawnFreq="(1.0,2.0)" />
	</enemyFish> 


<!-- Hazards -->

	<enemyFish name="Mine" template="config/fish/Mine.xml" poolSize="3" displayMenuImage="false" mode="uncounted" >
		<spawnInfo playerSize="0"	maxCount="2"	respawnFreq="(3.0,8.0)" />
		<spawnInfo playerSize="8.5"	maxCount="1"	respawnFreq="(3.0,8.0)" />
		<spawnInfo playerSize="12.5"	maxCount="1"	respawnFreq="(3.0,8.0)" />
	</enemyFish>
	
	<enemyFish name="Oysters" template="config/fish/oysterFast.xml" poolSize="2" displayMenuImage="false" mode="uncounted" >
		<staticSpawn pos="100,525" doRespawn="true" />
		<spawnInfo playerSize="0"	maxCount="0"	respawnFreq="(.5,1.5)" />		
	</enemyFish>

	<enemyFish name="Jellies" template="config/fish/BasicJellyFish.xml" poolSize="3"  displayMenuImage="false" mode="uncounted">
		<spawnInfo playerSize="0"	maxCount="3"	respawnFreq="(7.0,11.0)" />
		<spawnInfo playerSize="8.5"	maxCount="3"	respawnFreq="(5.0,9.0)" />
	</enemyFish>


<!-- Powerups -->

	<enemyFish name="Bubbles" template="config/fish/BonusBubbleStar.xml" poolSize="3"  displayMenuImage="false" mode="uncounted" >
		<spawnInfo playerSize="0"	maxCount="3"	respawnFreq="(1.0,7.0)" />
	</enemyFish>

	<enemyFish name="Fury Bubbles" template="config/fish/BonusBubbleFeedingFury.xml" poolSize="1"  displayMenuImage="false" mode="uncounted">
		<spawnInfo playerSize="0"	maxCount="1"	respawnFreq="(8.0,25.0)" />
	</enemyFish>


	<enemyFish name="Fury Bubbles" template="config/fish/BonusBubbleStun.xml" poolSize="1"  displayMenuImage="false" mode="uncounted">
		<spawnInfo playerSize="0"	maxCount="1"	respawnFreq="(10.0,15.0)" />
	</enemyFish>

	<music	introSound="stageIntro"
			outroSound="stageOutro"
			gameMusic="resources/music/track1.wav" />
		
</stage>
