		<image name="jdNormalImg" file="resources/menus/map/mapJdBtn_normal.png" />
	</group>

	<group name="orcaBtnGroup" x="457" y="132">
		<imageButton name="orcaButton" 
			upImg="resources/menus/map/mapOrcaBtn_normal.png" 
			overImg="resources/menus/map/mapOrcaBtn_high.png" 
			action="stageChooseOrville"
			overSound="resources/sounds/mouseOver.wav" 
			activeSound="resources/sounds/mouseDown.wav" />
