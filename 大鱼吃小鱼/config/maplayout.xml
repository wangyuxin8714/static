		<image name="orcaNormalImg" file="resources/menus/map/mapOrcaBtn_normal.png" />
	</group>

	<text name="stageLabel" x="320" y="228" opacity="0.8" font="resources/menus/infoText14.xml" xAlign="center" string="stage name.. some are long" />



