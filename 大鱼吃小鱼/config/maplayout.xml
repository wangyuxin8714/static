<screen name="Map Layout">
	<image name="background" file="resources\menus\mapBg.jpg"  />

	<text name="nextStageText" 
			font="resources/menus/infoText14.xml"
			string="Next Stage:\nBlah Blah"
			xAlign="center"
			x="320"
			y="90"
	/>

	<image name="chooseHeader" x="176" y="104" file="resources\\menus\\mapChooseOverlay.jpg" />

	<group name="loadBarGroup">
